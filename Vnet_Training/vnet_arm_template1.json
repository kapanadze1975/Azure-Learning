{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "CoreServicesVne": {
      "type": "string",
      "defaultValue": "CoreServicesVnet",
      "metadata": {
        "description": "VNet name"
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "defaultValue": "10.20.0.0/16",
      "metadata": {
        "description": "Address prefix"
      }
    },
    "subnet1Prefix": {
      "type": "string",
      "defaultValue": "10.20.0.0/27",
      "metadata": {
        "description": "Subnet 1 Prefix"
      }
    },
    "GatewaySubnet": {
      "type": "string",
      "defaultValue": "GatewaySubnet",
      "metadata": {
        "description": "Subnet 1 Name"
      }
    },
    
    "subnet2Prefix": {
      "type": "string",
      "defaultValue": "10.20.10.0/24",
      "metadata": {
        "description": "Subnet 2 Prefix"
      }
    },
    "SharedServicesSubnet": {
      "type": "string",
      "defaultValue": "SharedServicesSubnet",
      "metadata": {
        "description": "Subnet 2 Name"
      }
    },

    "subnet3Prefix": {
        "type": "string",
        "defaultValue": "10.20.20.0/24",
        "metadata": {
            "description": "Subnet 3 Prefix"
        }
    },
    "DatabaseSubnet": {
        "type": "string",
        "defaultValue": "DatabaseSubnet",
        "metadata": {
            "description": "Subnet 3 Name"
        }
    },
    "subnet4Prefix": {
        "type": "string",
        "defaultValue": "10.20.30.0/24",
        "metadata": {
            "description": "Subnet 4 Prefix"
        }
    },
    "PublicWebServiceSubnet": {
        "type": "string",
        "defaultValue": "PublicWebServiceSubnet",
        "metadata": {
            "description":"Subnet 4 Name"
        }
    }

  },
  "variables": {
    "resourceLocation": "[resourceGroup().location]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2022-09-01",
      "name": "[parameters('vnetName')]",
      "location": "[variables('resourceLocation')]", 
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetAddressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[parameters('subnet1Name')]",
            "properties": {
              "addressPrefixes": ["[parameters('subnet1Prefix')]"]
            }
          },
          {
            "name": "[parameters('subnet2Name')]",
            "properties": {
              "addressPrefixes": ["[parameters('subnet2Prefix')]"]
            }
          }
        ]
      }
    }
  ]
}
